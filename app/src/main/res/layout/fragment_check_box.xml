<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/framecontainerq1"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBoxFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/checkboxfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/derportes_background"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:id="@+id/answerq1_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
        <TextView
            android:id="@+id/preguntacheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pregunta"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"/>

        <CheckBox
            android:id="@+id/answer1q1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:buttonTint="@color/black"
            android:background="@drawable/radioanswers"/>

        <CheckBox
            android:id="@+id/answer2q1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            android:layout_below="@+id/answer1q1"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:buttonTint="@color/black"
            android:background="@drawable/radioanswers"/>

        <CheckBox
            android:id="@+id/answer3q1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            android:layout_margin="20dp"
            android:layout_below="@+id/answer2q1"
            android:layout_centerHorizontal="true"
            android:buttonTint="@color/black"
            android:background="@drawable/radioanswers" />
        <CheckBox
            android:id="@+id/answer4q1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            android:layout_margin="20dp"
            android:layout_below="@+id/answer3q1"
            android:layout_centerHorizontal="true"
            android:buttonTint="@color/black"
            android:background="@drawable/radioanswers" />

    </RelativeLayout>
</FrameLayout>